{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/DeMineArchiver/BoostyAPI/master/schemas/template/textBlock.schema.json",
    "title": "Boosty TextBlock Template Schema",
    "description": "Describes a Boosty API blog endpoint response",
    "type": "array",
    "items": {
        "oneOf": [
            {
                "type": "object",
                "properties": {
                    "content": {
                        "type": "string",
                        "default": ""
                    },
                    "type": {
                        "type": "string",
                        "enum": ["text"]
                    },
                    "modificator": {
                        "type": "string",
                        "default": "",
                        "enum": [
                            "", "BLOCK_END"
                        ]
                    }
                }
            },
            {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": [
                            "image"
                        ]
                    },
                    "width": {
                        "type": "integer"
                    },
                    "height": {
                        "type": "integer"
                    },
                    "id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "url": {
                        "type": "string",
                        "format": "uri"
                    }
                }
            }
        ]
    }
}